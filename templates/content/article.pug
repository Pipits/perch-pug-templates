- var prevURL = '<perch:content id="prev_url" type="hidden" encode="false" />'
- var nextURL = '<perch:content id="next_url" type="hidden" encode="false" />'

h2
  perch:content(id="heading" type="text" label="Heading" required="true" title="true")/

p.date
  perch:content(id="date" type="date" label="Date" format="%d %B %Y" required="true")/

| <hr>
perch:content(id="body" type="textarea" label="Body" markdown="true" editor="simplemde" required="true" imagewidth="800")/
| <hr>

p.vcard
  | &copy;
  perch:content(id="date" type="date" label="Date" format="Y")/
  span.fn.n
    perch:content(id="author_given_name" type="text" label="Author given name")/
    perch:content(id="author_family_name" type="text" label="Author family name")/

perch:after
  perch:if(exists="paging")
    .paging
      | Page
      perch:content(id="current_page" type="hidden")/
      |  of
      perch:content(id="number_of_pages" type="hidden" )/

      perch:if(exists="not_first_page")
        a(href!=prevURL) Previous

      perch:content(id="page_links" encode="false")/

      perch:if(exists="not_last_page")
        a(href!=nextURL) Next
