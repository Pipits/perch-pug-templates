- var prevURL = '<perch:content id="prev_url" type="hidden" encode="false" />'
- var nextURL = '<perch:content id="next_url" type="hidden" encode="false" />'

perch:if(exists="paging")
  .paging
    | Page 
    perch:content(id="current_page" type="hidden")/
    |  of 
    perch:content(id="number_of_pages" type="hidden" )/
    
    perch:if(exists="not_first_page")
      a(href!=prevURL) Previous

    perch:content(id="page_links" encode="false")/

    perch:if(exists="not_last_page")
      a(href!=nextURL) Next