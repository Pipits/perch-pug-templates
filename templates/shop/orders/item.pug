perch:before
  dl
    dt Order ID
    dd
      perch:shop(id="orderID")/
      
    dt Invoice Number
    dd
      perch:shop(id="invoice_number")/
      
    dt Date
    dd
      perch:shop(id="orderCreated" type="date" format="d F Y H:i")/
      
    dt Total
    dd
      perch:shop(id="grand_total_formatted" )/
      
    dt Status
    dd
      perch:shop(id="orderStatus" format="UC")/
      
    dt Shipping
    dd
      perch:shop(id="shipping_value")/

  h2 Items
  | <table>
  tr
    th Code
    th Item
    th Quantity
    th Pice
    th Total



perch:orderitems
  tr
    td
      perch:orderitem(id="sku" type="hidden")/
      
    td
      perch:orderitem(id="title" type="hidden")/
      perch:orderitem(id="variant_desc" type="hidden")/
      
    td
      perch:orderitem(id="quantity" type="hidden")/
      
    td
      perch:orderitem(id="price_without_tax" type="hidden" format!="$:%.2n")/
      
    td(align="right")
      perch:orderitem(id="total_without_tax" type="hidden" format!="$:%.2n")/
      

perch:after
  | </table>